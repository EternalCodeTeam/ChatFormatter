{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "all minor and patch dependencies",
      "groupSlug": "minor-patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*",
        "!/org.spigotmc*/"
      ]
    },
    {
      "groupName": "all major dependencies",
      "groupSlug": "major",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "matchPackageNames": [
        "*",
        "!/org.spigotmc*/"
      ]
    },
    {
      "groupName": "spigot dependencies",
      "groupSlug": "spigotmc",
      "automerge": false,
      "matchPackageNames": [
        "/org.spigotmc*/"
      ]
    }
  ],
  "separateMajorMinor": true,
  "pruneStaleBranches": true,
  "commitMessagePrefix": "[Renovate]"
}
